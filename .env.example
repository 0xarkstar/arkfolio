# ArkFolio Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# WALLET CONNECTIONS (Optional)
# =============================================================================

# WalletConnect Project ID - Get from https://cloud.walletconnect.com/
# Required for WalletConnect integration, optional for MetaMask-only usage
VITE_WALLETCONNECT_PROJECT_ID=

# =============================================================================
# BLOCKCHAIN RPC ENDPOINTS (Optional - uses public defaults if not set)
# =============================================================================

# For better performance and reliability, set your own RPC endpoints
# Get free keys from: Alchemy, Infura, QuickNode, or use Ankr public endpoints

# VITE_ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY
# VITE_ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_KEY
# VITE_OPTIMISM_RPC_URL=https://opt-mainnet.g.alchemy.com/v2/YOUR_KEY
# VITE_BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_KEY
# VITE_POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_KEY
# VITE_BSC_RPC_URL=https://bsc-dataseed.binance.org
# VITE_AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc
# VITE_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# VITE_SUI_RPC_URL=https://fullnode.mainnet.sui.io

# =============================================================================
# DEVELOPMENT / DEBUG (Optional)
# =============================================================================

# Enable verbose logging in development
# VITE_DEBUG=true

# Mock data for development/testing (skips real API calls)
# VITE_MOCK_DATA=true
