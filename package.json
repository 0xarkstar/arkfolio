{
  "name": "arkfolio",
  "version": "0.1.0",
  "description": "Hybrid Crypto Asset Aggregator - Portfolio management with CEX/DEX tracking, on-chain indexing, DeFi analytics, and Korean tax compliance",
  "type": "module",
  "main": "dist-electron/main.js",
  "author": "ArkStar",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "build:vite": "vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
